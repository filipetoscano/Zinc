    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    ~
    ~ MethodInvoker/
    ~
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <error id="MethodInvoker_RequestValidate" actor="~.Zinc" code="4000">
        <description>Unhandled exception validating instance of '{0}'.</description>
    </error>

    <error id="MethodInvoker_RequestInvalid" actor="~.Zinc.Client" code="4001">
        <description>Request '{0}' is invalid.</description>
    </error>

    <error id="MethodInvoker_ResponseValidate" actor="~.Zinc" code="4002">
        <description>Unhandled exception validating instance of '{0}'.</description>
    </error>

    <error id="MethodInvoker_ResponseInvalid" actor="~.Zinc" code="4003">
        <description>Response '{0}' is invalid.</description>
