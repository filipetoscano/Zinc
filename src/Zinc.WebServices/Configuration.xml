<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns="urn:platinum/config">

    <section name="zinc.webServices" type="ZincConfiguration">
        <element name="rest" type="ZincRestConfiguration">
            <bool name="enabled" optional="true" default="true" />

            <!-- named name="handlers" -->

            <repeater name="extensions">
                <item name="add" type="ZincRestExtension">
                    <string name="name" key="true" />
                    <string name="type" />
                    <keyValue />
                </item>
            </repeater>
        </element>

        <repeater name="logging">
            <item name="for" type="MethodLoggingConfiguration">
                <string name="method" key="true" />
                <enum name="type" type="MethodLoggingType" optional="true" default="PrePost" />
                <bool name="request" optional="true" default="true" />
                <bool name="response" optional="true" default="true" />
            </item>
        </repeater>

        <repeater name="raw-logging" as="RawLogging">
            <item name="for" type="MethodRawLoggingConfiguration">
                <string name="method" key="true" />
                <bool name="enabled" optional="true" default="true" />
                <bool name="request" optional="true" default="true" />
                <bool name="response" optional="true" default="true" />
            </item>
        </repeater>
    </section>

</configuration>